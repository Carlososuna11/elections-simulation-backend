{
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"entryFile": "app",
	"compilerOptions": {
		"tsConfigPath": "tsconfig.build.json",
		"deleteOutDir": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": { "classValidatorShim": true, "introspectComments": true }
			}
		]
	}
}
